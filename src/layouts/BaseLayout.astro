---
import '../styles/globals.css';

interface Props {
  title?: string;
  description?: string;
  canonical?: string;
  ogType?: string;
  publishedTime?: string;
  breadcrumbs?: { name: string; url: string }[];
}

const {
  title = '서울 무료주차장 · 공영주차장 찾기 | ParkingMap',
  description = '서울시 무료주차장, 공영주차장 위치를 지도에서 한눈에 찾아보세요. 서울 25개구 주차장 정보와 요금, 운영시간, 주차 가능 대수를 확인할 수 있습니다.',
  canonical = 'https://parkingmap.kr',
  ogType = 'website',
  publishedTime,
  breadcrumbs,
} = Astro.props;

const siteUrl = 'https://parkingmap.kr';

const websiteSchema = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": "주차장 지도",
  "alternateName": "ParkingMap",
  "url": siteUrl,
  "description": description,
};

const organizationSchema = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "주차장 지도",
  "alternateName": "ParkingMap",
  "url": siteUrl,
  "logo": {
    "@type": "ImageObject",
    "url": `${siteUrl}/og-image.png`,
  },
  "description": description,
};

const breadcrumbSchema = breadcrumbs && breadcrumbs.length > 0 ? {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": breadcrumbs.map((item, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "name": item.name,
    "item": item.url,
  })),
} : null;
---

<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5" />

    <!-- Preconnect to third-party origins -->
    <link rel="preconnect" href="https://www.googletagmanager.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />

    <!-- Naver Search Advisor -->
    <meta name="naver-site-verification" content="82da24439af9bd3b1a0eaa57709b4a52d9d44083" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="keywords" content="무료주차장, 공영주차장, 주차장 찾기, 주차장 지도" />
    <meta name="author" content="주차장 지도" />
    <meta name="creator" content="주차장 지도" />
    <meta name="publisher" content="주차장 지도" />

    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content={ogType} />
    <meta property="og:locale" content="ko_KR" />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="주차장 지도" />
    <meta property="og:image" content={`${siteUrl}/og-image.png`} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    {publishedTime && <meta property="article:published_time" content={publishedTime} />}
    {publishedTime && <meta property="article:modified_time" content={publishedTime} />}
    {publishedTime && <meta property="article:author" content="주차장 지도" />}

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${siteUrl}/og-image.png`} />

    <!-- Robots -->
    <meta name="robots" content="index, follow" />
    <meta name="googlebot" content="index, follow, max-video-preview:-1, max-image-preview:large, max-snippet:-1" />


    <!-- JSON-LD Schemas -->
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
    <script type="application/ld+json" set:html={JSON.stringify(organizationSchema)} />
    {breadcrumbSchema && <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />}

    <slot name="head" />
  </head>
  <body class="bg-white text-black">
    <!-- Google Tag Manager (noscript) -->
    <noscript>
      <iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-TZCV7VVJ"
        height="0"
        width="0"
        style="display: none; visibility: hidden;"
      ></iframe>
    </noscript>

    <main class="mx-auto max-w-4xl px-5 py-12">
      <slot />
    </main>

    <!-- Google Tag Manager (deferred to after content) -->
    <script is:inline>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
    new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
    j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
    'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
    })(window,document,'script','dataLayer','GTM-TZCV7VVJ');</script>

    <!-- Google Analytics -->
    <script is:inline async src="https://www.googletagmanager.com/gtag/js?id=G-5XJXLKWVHK"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-5XJXLKWVHK');
    </script>
  </body>
</html>
