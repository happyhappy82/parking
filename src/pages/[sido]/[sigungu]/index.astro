---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import Header from '../../../components/Header.astro';
import fs from 'node:fs';
import path from 'node:path';

const naverClientId = import.meta.env.PUBLIC_NAVER_MAP_CLIENT_ID;

export function getStaticPaths() {
  const parkingDir = path.join(process.cwd(), 'content', 'parking');
  const paths: { params: { sido: string; sigungu: string } }[] = [];

  if (!fs.existsSync(parkingDir)) return paths;

  const sidos = fs.readdirSync(parkingDir).filter((f: string) =>
    fs.statSync(path.join(parkingDir, f)).isDirectory()
  ).filter((f: string) => f === '서울특별시');

  for (const sido of sidos) {
    const sidoDir = path.join(parkingDir, sido);
    const files = fs.readdirSync(sidoDir).filter((f: string) => f.endsWith('.json'));

    for (const file of files) {
      const sigungu = file.replace('.json', '');
      paths.push({ params: { sido, sigungu } });
    }
  }

  return paths;
}

const { sido, sigungu } = Astro.params;

// 현재 활성화된 시군구 목록 (데이터 검증 완료된 지역)
const ACTIVE_SIGUNGUS = [
  '강남구', '강동구', '강북구', '강서구', '관악구',
  '광진구', '구로구', '금천구', '노원구', '도봉구',
  '동대문구', '동작구', '마포구', '서대문구', '서초구',
  '성동구', '성북구', '송파구', '양천구', '영등포구',
  '용산구', '은평구', '종로구', '중구', '중랑구',
];
const isActive = ACTIVE_SIGUNGUS.includes(sigungu!);

const jsonPath = path.join(process.cwd(), 'content', 'parking', sido!, `${sigungu}.json`);
const raw = fs.readFileSync(jsonPath, 'utf-8');
const data = JSON.parse(raw);

const items = data.items.sort((a: any, b: any) => b.totalSpaces - a.totalSpaces);
const freeCount = items.filter((i: any) => i.isFree).length;
const paidCount = items.filter((i: any) => !i.isFree).length;
const totalCount = items.length;

// 동별 그룹핑
const dongMap: Record<string, number> = {};
for (const item of items) {
  if (item.dong) {
    dongMap[item.dong] = (dongMap[item.dong] || 0) + 1;
  }
}
const dongList = Object.entries(dongMap).sort((a, b) => b[1] - a[1]);

function toSlug(name: string): string {
  return name
    .replace(/\s+/g, '-')
    .replace(/[^a-zA-Z0-9가-힣ㄱ-ㅎㅏ-ㅣ\-]/g, '')
    .replace(/-+/g, '-')
    .replace(/^-|-$/g, '');
}

// 공단주소 데이터 로딩
let gongdanData: any = null;
const gongdanPath = path.join(process.cwd(), 'data', '공단주소', `${sigungu}.json`);
if (fs.existsSync(gongdanPath)) {
  gongdanData = JSON.parse(fs.readFileSync(gongdanPath, 'utf-8'));
}

// 공단주소에서 모든 주차장목록 추출 — slug 매칭용
function extractAllLots(gd: any): { lot: any; category: string }[] {
  const result: { lot: any; category: string }[] = [];
  const sources: { path: any; cat: string }[] = [];
  if (gd.노상주차장?.주차장목록 && Array.isArray(gd.노상주차장.주차장목록)) sources.push({ path: gd.노상주차장.주차장목록, cat: '노상' });
  else if (Array.isArray(gd.노상주차장)) sources.push({ path: gd.노상주차장, cat: '노상' });
  if (gd.노외주차장?.주차장목록 && Array.isArray(gd.노외주차장.주차장목록)) sources.push({ path: gd.노외주차장.주차장목록, cat: '노외' });
  else if (Array.isArray(gd.노외주차장)) sources.push({ path: gd.노외주차장, cat: '노외' });
  if (gd.부설주차장?.주차장목록 && Array.isArray(gd.부설주차장.주차장목록)) sources.push({ path: gd.부설주차장.주차장목록, cat: '부설' });
  else if (Array.isArray(gd.부설주차장)) sources.push({ path: gd.부설주차장, cat: '부설' });
  const gp = gd.공영주차장;
  if (gp?.주차장목록) {
    const ml = gp.주차장목록;
    if (Array.isArray(ml.노외주차장)) sources.push({ path: ml.노외주차장, cat: '노외' });
    if (Array.isArray(ml.노상주차장)) sources.push({ path: ml.노상주차장, cat: '노상' });
    if (Array.isArray(ml.부설주차장)) sources.push({ path: ml.부설주차장, cat: '부설' });
    if (Array.isArray(ml)) sources.push({ path: ml, cat: '공영' });
  }
  if (gp?.노외주차장?.주차장목록 && Array.isArray(gp.노외주차장.주차장목록)) sources.push({ path: gp.노외주차장.주차장목록, cat: '노외' });
  if (gp?.노상주차장?.주차장목록 && Array.isArray(gp.노상주차장.주차장목록)) sources.push({ path: gp.노상주차장.주차장목록, cat: '노상' });
  if (gp?.부설주차장 && Array.isArray(gp.부설주차장)) sources.push({ path: gp.부설주차장, cat: '부설' });
  for (const { path: arr, cat } of sources) {
    if (Array.isArray(arr)) {
      for (const lot of arr) {
        if (typeof lot === 'object' && (lot.주차장명 || lot.시설명)) result.push({ lot, category: cat });
      }
    }
  }
  return result;
}

function normalizeParkingName(name: string): string {
  return name.replace(/\s+/g, '').replace(/(공영주차장|노상주차장|부설주차장|주차장|공영)$/g, '').trim();
}

// 공단주소 기반 slug 맵 빌드: normalized name → toSlug(공단주소 주차장명)
const gongdanSlugMap = new Map<string, string>();
if (gongdanData) {
  const allGongdanLots = extractAllLots(gongdanData);
  for (const { lot } of allGongdanLots) {
    const lotName = lot.주차장명 || lot.시설명 || '';
    const norm = normalizeParkingName(lotName);
    if (norm) gongdanSlugMap.set(norm, toSlug(lotName));
  }
}

function findGongdanSlug(itemName: string): string | undefined {
  const norm = normalizeParkingName(itemName);
  if (gongdanSlugMap.has(norm)) return gongdanSlugMap.get(norm);
  for (const [key, slug] of gongdanSlugMap) {
    if (key && norm && (norm.includes(key) || key.includes(norm))) return slug;
  }
  return undefined;
}

// 노상/노외/부설/시설 개소수 추출
function extractParkingSummary(data: any) {
  const summary: { label: string; count: number; total?: number }[] = [];
  const nosang = data.공영주차장?.노상주차장 || data.노상주차장;
  const nooe = data.공영주차장?.노외주차장 || data.노외주차장;
  const buseol = data.공영주차장?.부설주차장 || data.부설주차장;
  const sisel = data.시설주차장;
  if (nosang?.개소수) summary.push({ label: '노상', count: nosang.개소수, total: nosang.총주차면수 });
  if (nooe?.개소수) summary.push({ label: '노외', count: nooe.개소수, total: nooe.총주차면수 });
  if (buseol?.개소수) summary.push({ label: '부설', count: buseol.개소수 });
  if (sisel?.개소수) summary.push({ label: '시설', count: sisel.개소수, total: sisel.총주차면수 });
  return summary;
}

// 요금정보 추출
function extractFeeInfo(data: any) {
  const fee = data.요금정보;
  if (!fee || Object.keys(fee).length === 0) return null;

  // 급지별 (강남구/중랑구): 노외주차장/노상주차장 키
  if (fee.노외주차장 || fee.노상주차장) {
    return { type: 'grade' as const, data: fee };
  }
  // 급지별 변형 (중구): 노외주차장_급지별/노상주차장_급지별
  const gradeKeys = Object.keys(fee).filter(k => k.includes('급지별'));
  if (gradeKeys.length > 0) {
    const gradeData: Record<string, any> = {};
    for (const k of gradeKeys) gradeData[k.replace(/_급지별/g, '')] = fee[k];
    return { type: 'grade' as const, data: gradeData };
  }
  // 정기권 (서대문구)
  if (fee.정기권) {
    return { type: 'monthly' as const, data: fee.정기권 };
  }
  // 기타 구조 (도봉구, 성북구, 은평구 등): 그대로 key-value 표시
  return { type: 'general' as const, data: fee };
}

// 할인/감면정보 추출
function extractDiscountInfo(data: any) {
  if (data.할인정보 && Array.isArray(data.할인정보)) {
    // 문자열 배열 (강남구 패턴) vs 객체 배열 (서대문구 패턴) 구분
    if (data.할인정보.length > 0 && typeof data.할인정보[0] === 'object') {
      return { type: 'object' as const, items: data.할인정보 };
    }
    return { type: 'simple' as const, items: data.할인정보 };
  }
  const nosang = data.공영주차장?.노상주차장 || data.노상주차장;
  const nooe = data.공영주차장?.노외주차장 || data.노외주차장;
  const src = nosang?.감면정보 || nooe?.감면정보;
  if (src && Array.isArray(src)) {
    return { type: 'structured' as const, items: src };
  }
  return null;
}

// 거주자우선주차 정보 추출
function extractResidentParking(data: any) {
  return data.거주자우선주차 || data.거주자우선주차장 || null;
}

// 연락처 추출
function extractContact(data: any) {
  return data.연락처 || null;
}

const parkingSummary = gongdanData ? extractParkingSummary(gongdanData) : [];
const feeInfo = gongdanData ? extractFeeInfo(gongdanData) : null;
const discountInfo = gongdanData ? extractDiscountInfo(gongdanData) : null;
const residentParking = gongdanData ? extractResidentParking(gongdanData) : null;
const contactInfo = gongdanData ? extractContact(gongdanData) : null;

const title = `${sigungu} 무료주차장 · 공영주차장 지도 - 위치·요금 안내 | 주차장 지도`;
const description = `${sigungu} 무료주차장 ${freeCount}곳, 유료주차장 ${paidCount}곳 위치·요금·운영시간 안내. ${dongList.slice(0, 5).map(([d]) => d).join(', ')} 등 동별 주차장 검색.`;
const canonical = `https://parkingmap.kr/${encodeURIComponent(sido!)}/${encodeURIComponent(sigungu!)}/`;

const breadcrumbs = [
  { name: '홈', url: 'https://parkingmap.kr/' },
  { name: sido!, url: `https://parkingmap.kr/${encodeURIComponent(sido!)}/` },
  { name: sigungu!, url: canonical },
];
---

<BaseLayout title={title} description={description} canonical={canonical} breadcrumbs={breadcrumbs}>
  {isActive && <Fragment slot="head" set:html={`<script src="https://oapi.map.naver.com/openapi/v3/maps.js?ncpKeyId=${naverClientId}"></script>`} />}
  <Header currentPath="/" />
  <main class="max-w-3xl mx-auto px-4 py-8">

    <!-- 브레드크럼 -->
    <nav class="flex items-center gap-1.5 text-sm text-gray-400 mb-6 flex-wrap">
      <a href="/" class="hover:text-emerald-600 transition-colors">홈</a>
      <span>/</span>
      <a href={`/${encodeURIComponent(sido!)}/`} class="hover:text-emerald-600 transition-colors">{sido}</a>
      <span>/</span>
      <span class="text-gray-900 font-semibold">{sigungu}</span>
    </nav>

    <!-- 페이지 제목 -->
    <div class="mb-6">
      <h1 class="text-3xl font-black text-gray-900 mb-2">{sigungu} 공영주차장</h1>
      <p class="text-gray-500">{sido} {sigungu} 지역의 공영주차장 정보입니다</p>
    </div>

    {isActive ? (
      <>
        <!-- 통계 카드 -->
        <div class="grid grid-cols-3 gap-3 mb-6">
          <div class="bg-gray-50 rounded-xl p-4 text-center">
            <p class="text-2xl font-black text-gray-900">{totalCount}</p>
            <p class="text-xs text-gray-500 mt-1">전체 주차장</p>
          </div>
          <div class="bg-emerald-50 rounded-xl p-4 text-center">
            <p class="text-2xl font-black text-emerald-600">{freeCount}</p>
            <p class="text-xs text-emerald-600 mt-1">무료 주차장</p>
          </div>
          <div class="bg-blue-50 rounded-xl p-4 text-center">
            <p class="text-2xl font-black text-blue-600">{paidCount}</p>
            <p class="text-xs text-blue-600 mt-1">유료 주차장</p>
          </div>
        </div>

        <!-- 동별 바로가기 -->
        {dongList.length > 1 && (
          <div class="mb-6">
            <h2 class="text-sm font-bold text-gray-700 mb-3">동별 바로가기</h2>
            <div class="flex flex-wrap gap-2">
              {dongList.map(([dong, count]) => (
                <a
                  href={`/${encodeURIComponent(sido!)}/${encodeURIComponent(sigungu!)}/${encodeURIComponent(dong)}/`}
                  class="px-3 py-1.5 text-sm bg-gray-100 text-gray-700 rounded-full hover:bg-emerald-50 hover:text-emerald-600 transition-colors"
                >
                  {dong} <span class="text-xs text-gray-400 ml-0.5">{count}</span>
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- 네이버 지도 -->
        <div id="naver-map" class="w-full h-[400px] bg-gray-100 rounded-2xl overflow-hidden mb-6 flex items-center justify-center">
          <p class="text-gray-400">지도를 불러오는 중...</p>
        </div>

        <!-- 필터 버튼 -->
        <div id="filter-buttons" class="flex gap-2 mb-4">
          <button data-filter="all" class="filter-btn active px-4 py-2 text-sm font-bold rounded-xl border-2 border-gray-900 bg-gray-900 text-white transition-all">
            전체 <span class="ml-1 text-xs opacity-80">{totalCount}</span>
          </button>
          <button data-filter="free" class="filter-btn px-4 py-2 text-sm font-bold rounded-xl border-2 border-emerald-500 text-emerald-600 bg-white hover:bg-emerald-50 transition-all">
            무료 <span class="ml-1 text-xs opacity-80">{freeCount}</span>
          </button>
          <button data-filter="paid" class="filter-btn px-4 py-2 text-sm font-bold rounded-xl border-2 border-blue-500 text-blue-600 bg-white hover:bg-blue-50 transition-all">
            유료 <span class="ml-1 text-xs opacity-80">{paidCount}</span>
          </button>
        </div>

        <!-- 검색 결과 카운트 -->
        <p id="result-count" class="text-sm text-gray-500 font-semibold mb-4">검색 결과: {totalCount}건</p>

        <!-- 주차장 카드 목록 -->
        <div id="parking-cards" class="flex flex-col gap-4 mb-2">
          {items.length > 0 ? (
            items.map((lot: any, i: number) => (
              <div class="parking-card p-5 border border-gray-200 rounded-2xl hover:border-emerald-200 hover:shadow-md transition-all cursor-pointer" data-index={i} data-isfree={lot.isFree ? 'true' : 'false'} data-href={lot.dong ? `/${encodeURIComponent(sido!)}/${encodeURIComponent(sigungu!)}/${encodeURIComponent(lot.dong)}/${encodeURIComponent(findGongdanSlug(lot.name) || toSlug(lot.name))}/` : undefined}>
                <div class="flex items-start justify-between gap-4">
                  <div class="flex-1 min-w-0">
                    <div class="flex items-center gap-2 mb-1.5 flex-wrap">
                      {lot.dong ? (
                        <a href={`/${encodeURIComponent(sido!)}/${encodeURIComponent(sigungu!)}/${encodeURIComponent(lot.dong)}/${encodeURIComponent(findGongdanSlug(lot.name) || toSlug(lot.name))}/`} class="font-bold text-gray-900 text-lg truncate hover:text-emerald-600 transition-colors">{lot.name}</a>
                      ) : (
                        <h3 class="font-bold text-gray-900 text-lg truncate">{lot.name}</h3>
                      )}
                      <span class={`shrink-0 px-2 py-0.5 text-xs font-semibold rounded-md ${lot.isFree ? 'bg-emerald-50 text-emerald-600' : 'bg-blue-50 text-blue-600'}`}>
                        {lot.isFree ? '무료' : '유료'}
                      </span>
                      <span class="shrink-0 px-2 py-0.5 text-xs font-medium rounded-md bg-gray-100 text-gray-500">
                        {lot.type}{lot.category ? ` / ${lot.category}` : ''}
                      </span>
                      {lot.dong && (
                        <a href={`/${encodeURIComponent(sido!)}/${encodeURIComponent(sigungu!)}/${encodeURIComponent(lot.dong)}/`} class="shrink-0 px-2 py-0.5 text-xs font-medium rounded-md bg-amber-50 text-amber-600 hover:bg-amber-100 transition-colors">
                          {lot.dong}
                        </a>
                      )}
                    </div>
                    <p class="text-sm text-gray-500 mb-3">{lot.address}</p>
                    <div class="flex flex-wrap gap-x-5 gap-y-1 text-sm text-gray-600">
                      <span class="flex items-center gap-1.5">
                        <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                        {lot.weekdayOpen || '-'}~{lot.weekdayClose || '-'}
                      </span>
                      {lot.totalSpaces && (
                        <span class="flex items-center gap-1.5">
                          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/></svg>
                          주차면 {lot.totalSpaces}면
                        </span>
                      )}
                      {lot.feeInfo && (
                        <span class="flex items-center gap-1.5">
                          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
                          {lot.feeInfo}
                        </span>
                      )}
                      {lot.phone && (
                        <span class="flex items-center gap-1.5">
                          <svg class="w-4 h-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/></svg>
                          {lot.phone}
                        </span>
                      )}
