---
export const prerender = false;
---
<!DOCTYPE html>
<html lang="ko">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="robots" content="noindex, nofollow" />
  <title>블로그 글 편집 | ParkingMap Admin</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; background: #f5f5f5; color: #111; }
    .sidebar {
      position: fixed; top: 0; left: 0; width: 240px; height: 100vh;
      background: #1a1a2e; color: white; padding: 24px 0;
    }
    .sidebar .logo { padding: 0 24px; font-size: 20px; font-weight: 800; margin-bottom: 32px; }
    .sidebar .logo span { color: #34d399; }
    .sidebar nav a {
      display: flex; align-items: center; gap: 10px;
      padding: 12px 24px; color: #aaa; text-decoration: none;
      font-size: 14px; transition: all 0.2s;
    }
    .sidebar nav a:hover, .sidebar nav a.active { color: white; background: rgba(255,255,255,0.08); }
    .sidebar nav a.active { border-left: 3px solid #34d399; }
    .main { margin-left: 240px; padding: 32px 40px; max-width: 900px; }
    .header { display: flex; justify-content: space-between; align-items: center; margin-bottom: 24px; }
    .header h1 { font-size: 24px; font-weight: 800; }
    .form-group { margin-bottom: 20px; }
    .form-group label { display: block; font-size: 14px; font-weight: 600; color: #333; margin-bottom: 8px; }
    .form-group input, .form-group textarea {
      width: 100%; padding: 12px 16px; border: 1px solid #ddd;
      border-radius: 8px; font-size: 14px; outline: none;
      font-family: inherit; transition: border-color 0.2s;
    }
    .form-group input:focus, .form-group textarea:focus { border-color: #059669; }
    .form-group textarea { min-height: 400px; font-family: 'SF Mono', 'Fira Code', monospace; font-size: 13px; line-height: 1.6; resize: vertical; }
    .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 16px; }
    .btn { display: inline-block; padding: 12px 24px; border: none; border-radius: 8px; font-size: 14px; font-weight: 600; cursor: pointer; transition: all 0.2s; text-decoration: none; }
    .btn-primary { background: #059669; color: white; }
    .btn-primary:hover { background: #047857; }
    .btn-gray { background: #e5e7eb; color: #374151; }
    .btn-gray:hover { background: #d1d5db; }
    .btn-red { background: #fee2e2; color: #dc2626; }
    .btn-red:hover { background: #fecaca; }
    .btn:disabled { opacity: 0.5; cursor: not-allowed; }
    .actions { display: flex; gap: 12px; margin-top: 24px; }
    .msg { padding: 12px 16px; border-radius: 8px; font-size: 14px; margin-top: 16px; display: none; }
    .msg-success { background: #d1fae5; color: #065f46; }
    .msg-error { background: #fee2e2; color: #dc2626; }
    .loading { text-align: center; padding: 60px; color: #888; }
  </style>
</head>
<body>
  <aside class="sidebar">
    <div class="logo"><span>P</span> Admin</div>
    <nav>
      <a href="/admin/">대시보드</a>
      <a href="/admin/blog/" class="active">블로그 관리</a>
      <a href="/admin/parking/">주차장 관리</a>
      <a href="/" target="_blank">사이트 보기</a>
    </nav>
  </aside>

  <div class="main">
    <div class="header">
      <h1>블로그 글 편집</h1>
      <a href="/admin/blog/" class="btn btn-gray">목록으로</a>
    </div>

    <div id="loadingState" class="loading">불러오는 중...</div>

    <form id="blogForm" style="display:none;">
      <div class="form-group">
        <label for="title">제목</label>
        <input type="text" id="title" required />
      </div>

      <div class="form-row">
        <div class="form-group">
          <label for="slug">슬러그 (URL) — 변경 불가</label>
          <input type="text" id="slug" readonly style="background:#f5f5f5;" />
        </div>
        <div class="form-group">
          <label for="date">날짜</label>
          <input type="date" id="date" required />
        </div>
      </div>

      <div class="form-group">
        <label for="description">설명 (SEO)</label>
        <input type="text" id="description" required />
      </div>

      <div class="form-group">
        <label for="content">본문 (Markdown)</label>
        <textarea id="content" required></textarea>
      </div>

      <div class="actions">
        <button type="submit" class="btn btn-primary" id="saveBtn">변경사항 저장</button>
        <button type="button" class="btn btn-red" id="deleteBtn">삭제</button>
      </div>

      <div class="msg msg-success" id="successMsg"></div>
      <div class="msg msg-error" id="errorMsg"></div>
    </form>
  </div>

  <script is:inline>
    const params = new URLSearchParams(window.location.search);
    const slug = params.get('slug');

    if (!slug) {
      document.getElementById('loadingState').textContent = '슬러그가 지정되지 않았습니다.';
    } else {
      loadPost(slug);
    }

    async function loadPost(slug) {
      try {
        const res = await fetch(`/api/admin/blog/?slug=${slug}`);
        const data = await res.json();

        if (!res.ok) throw new Error(data.error);

        document.getElementById('title').value = data.title;
        document.getElementById('slug').value = data.slug;
        document.getElementById('date').value = data.date;
        document.getElementById('description').value = data.description;
        document.getElementById('content').value = data.content;

        document.getElementById('loadingState').style.display = 'none';
        document.getElementById('blogForm').style.display = 'block';
      } catch (e) {
        document.getElementById('loadingState').textContent = '로드 실패: ' + e.message;
      }
    }

    // 저장
    document.getElementById('blogForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const btn = document.getElementById('saveBtn');
      const successMsg = document.getElementById('successMsg');
      const errorMsg = document.getElementById('errorMsg');

      btn.disabled = true;
      btn.textContent = '저장 중...';
      successMsg.style.display = 'none';
      errorMsg.style.display = 'none';

      try {
        const res = await fetch('/api/admin/blog/', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            slug: document.getElementById('slug').value,
            title: document.getElementById('title').value,
            date: document.getElementById('date').value,
            description: document.getElementById('description').value,
            content: document.getElementById('content').value,
          }),
        });

        const result = await res.json();

        if (res.ok) {
          successMsg.textContent = '저장 완료!';
          successMsg.style.display = 'block';
        } else {
          errorMsg.textContent = result.error || '저장 실패';
          errorMsg.style.display = 'block';
        }
      } catch (err) {
        errorMsg.textContent = '서버 오류: ' + err.message;
        errorMsg.style.display = 'block';
      } finally {
        btn.disabled = false;
        btn.textContent = '변경사항 저장';
      }
    });

    // 삭제
    document.getElementById('deleteBtn').addEventListener('click', async () => {
      if (!confirm('정말 삭제하시겠습니까? 이 작업은 되돌릴 수 없습니다.')) return;

      try {
        const res = await fetch('/api/admin/blog/', {
          method: 'DELETE',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ slug: document.getElementById('slug').value }),
        });

        if (res.ok) {
          alert('삭제 완료!');
          window.location.href = '/admin/blog/';
        } else {
          const result = await res.json();
          alert('삭제 실패: ' + (result.error || ''));
        }
      } catch (err) {
        alert('서버 오류: ' + err.message);
      }
    });
  </script>
</body>
</html>
